-- Reussir Cabal Project File
-- Manages Haskell frontend components

packages:
  frontend/reussir-bridge
  frontend/reussir-codegen

package *
  ghc-options: -O2 -fobject-determinism

-- Common build options
with-compiler: ghc

-- Optimization settings
optimization: True

-- Documentation
documentation: False

-- Tests
tests: True

-- Benchmarks
benchmarks: False
