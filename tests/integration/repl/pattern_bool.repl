// RUN: %reussir-repl -i %s -lerror -Oaggressive | %FileCheck %s

// Test: pattern matching on bool constants

:{
fn negate(x: bool) -> bool {
    match x {
        true => false,
        false => true
    }
}
}:
// CHECK: Definition added.

:{
fn both_true(a: bool, b: bool) -> bool {
    match a {
        true => match b {
            true => true,
            false => false
        },
        false => false
    }
}
}:
// CHECK: Definition added.

negate(true)
// CHECK: false : bool

negate(false)
// CHECK: true : bool

both_true(true, true)
// CHECK: true : bool

both_true(true, false)
// CHECK: false : bool

both_true(false, true)
// CHECK: false : bool
