{
    "name": "reussir-vscode",
    "displayName": "Reussir Language Support",
    "description": "VSCode extension for the Reussir programming language",
    "version": "0.1.0",
    "publisher": "reussir",
    "license": "(MIT OR Apache-2.0)",
    "repository": {
        "type": "git",
        "url": "https://github.com/SchrodingerZhu/reussir"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:reussir",
        "onStartupFinished"
    ],
    "contributes": {
        "languages": [
            {
                "id": "reussir",
                "aliases": [
                    "Reussir",
                    "reussir"
                ],
                "extensions": [
                    ".rr"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "reussir",
                "scopeName": "source.reussir",
                "path": "./syntaxes/reussir.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Reussir",
            "properties": {
                "reussir.lsp.serverPath": {
                    "type": "string",
                    "default": "reussir-lsp",
                    "description": "Path to the reussir-lsp executable"
                },
                "reussir.lsp.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the Reussir language server"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/node": "^18.0.0",
        "typescript": "^5.3.0"
    }
}
